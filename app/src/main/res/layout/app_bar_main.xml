<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/hello_world_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:paddingBottom="20dp"
        android:text="Hello! I'm QRA app."
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="20sp" />

    <Button
        android:id="@+id/send_request_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Send web request" />

    <Button
        android:id="@+id/edit_goods_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Edit goods" />

    <Button
        android:id="@+id/settings_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Settings" />

    <!--&lt;!&ndash;<android.support.design.widget.FloatingActionButton&ndash;&gt;-->
    <!--&lt;!&ndash;android:id="@+id/qr_scan_btn"&ndash;&gt;-->
    <!--&lt;!&ndash;android:layout_width="75dp"&ndash;&gt;-->
    <!--&lt;!&ndash;android:layout_height="75dp"&ndash;&gt;-->
    <!--&lt;!&ndash;android:layout_gravity="center"&ndash;&gt;-->
    <!--&lt;!&ndash;android:src="@drawable/logo5"&ndash;&gt;-->
    <!--&lt;!&ndash;android:backgroundTint="#37DCD2"&ndash;&gt;-->
    <!--&lt;!&ndash;android:layout_margin="16dp"&ndash;&gt;-->
    <!--&lt;!&ndash;tools:targetApi="lollipop" />&ndash;&gt;-->

    <Button
        android:id="@+id/qr_scan_btn"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:background="@drawable/logo5"
        tools:targetApi="lollipop" />

</LinearLayout>