<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:scaleType="centerCrop"
        android:src="@drawable/cat" />


    <EditText
        android:id="@+id/phone"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:backgroundTint="#30B9B1"
        android:ems="10"
        android:hint="Номер мобильного телефона"
        android:inputType="phone"
        android:paddingBottom="12dp"
        android:textColor="#2a2a2a" />

    <EditText
        android:id="@+id/password_text"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_text"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="17dp"
        android:backgroundTint="#30B9B1"
        android:ems="10"
        android:hint="Пароль"
        android:inputType="numberPassword"
        android:paddingBottom="12dp"
        android:textColor="#2a2a2a" />

    <Button
        android:id="@+id/sing_in_btn"
        android:layout_width="181dp"
        android:layout_height="40dp"
        android:layout_below="@+id/password_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:background="@drawable/buttonshape"
        android:elevation="4dp"
        android:stateListAnimator="@null"
        android:text="ВОЙТИ"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        android:translationZ="2dp" />

    <ProgressBar
        android:id="@+id/login_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sing_in_btn"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/register_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_null"
            android:text="РЕГИСТРАЦИЯ"
            android:textColor="#1A7670" />

        <Button
            android:id="@+id/restore_password_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_null"
            android:text="ВСПОМНИТЬ ПАРОЛЬ"
            android:textColor="#1A7670" />
    </LinearLayout>
</RelativeLayout>