<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ListProductsByCategoryActivity">


    <TextView
        android:id="@+id/text_categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:paddingBottom="20dp"
        android:text="TextView"
        android:textColor="#08CCB6"
        android:textSize="20sp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/check_item_name_for_user_text"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="10dp"
                    android:paddingBottom="20dp"
                    android:text="Название"
                    android:textColor="#030000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/check_quantity_text"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="10dp"
                    android:paddingBottom="20dp"
                    android:text="Количество"
                    android:textColor="#030000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/check_prise_text"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="10dp"
                    android:paddingBottom="20dp"
                    android:text="Стоимость"
                    android:textColor="#030000"
                    android:textSize="15sp" />
            </LinearLayout>

            <ListView
                android:id="@+id/items_list_for_categories"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center" />

        </LinearLayout>
    </HorizontalScrollView>


</android.widget.LinearLayout>